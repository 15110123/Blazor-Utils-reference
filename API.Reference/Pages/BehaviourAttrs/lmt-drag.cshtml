        <div style="width: 200px; height: 200px; border: 1px solid #000" lmt-drag>
        <label>Drag me!</label>
        </div>
    </Demo>
</AttrDetail>
@functions{      
    protected override async Task OnAfterRenderAsync()
    {
        LMTBehaviours();
    }
}
